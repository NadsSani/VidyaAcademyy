<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/natural"
                android:layout_below="@+id/imageLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:background="@drawable/recy_bg"
                android:id="@+id/imageLinear"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_profile_princi"
                    android:layout_width="96dp"
                    android:layout_height="84dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/ic_person_black_24dp"
                    app:civ_border_color="#cccccc"
                    app:civ_border_width="2dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="0.025"
                    android:text="Principal "
                    android:textColor="#000"
                    android:textSize="20dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/natural"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="30dp">


                    <!-- <ImageView
                         android:layout_width="15dp"
                         android:layout_height="15dp"
                         android:layout_marginLeft="50dp"
                         android:background="@drawable/ic_technology_5"
                         android:layout_gravity="center"
                         />-->


                    <ImageView
                        android:background="@drawable/ic_person_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:letterSpacing="0.025"
                            android:text="Name"
                            android:textColor="#000"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:id="@+id/tv_profile_p_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"

                            android:layout_marginTop="5dp"
                            android:letterSpacing="0.025"
                            android:textColor="#000"
                            android:textSize="12dp" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:background="#99A1AC" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="30dp">


                    <!--   <ImageView
                           android:layout_width="15dp"
                           android:layout_height="15dp"
                           android:layout_marginLeft="50dp"
                           android:background="@drawable/ic_cup"
                           android:layout_gravity="center"
                           />
   -->

                    <ImageView
                        android:background="@drawable/ic_email_black"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:letterSpacing="0.025"
                            android:text="Email-ID"
                            android:textColor="#000"
                            android:textSize="14dp"

                            />


                        <TextView
                            android:id="@+id/tv_profile_p_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="5dp"
                            android:letterSpacing="0.025"
                            android:textColor="#000"
                            android:textSize="12dp" />
                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:background="#99A1AC" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="30dp">


                    <!--
                                        <ImageView
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:layout_marginLeft="50dp"
                                            android:background="@drawable/ic_suitcase"
                                            android:layout_gravity="center"
                                            />-->


                    <ImageView
                        android:background="@drawable/ic_phone_black"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:letterSpacing="0.025"
                            android:text="Phone No"
                            android:textColor="#000"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:id="@+id/tv_profile_p_phno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="5dp"
                            android:letterSpacing="0.025"
                            android:textColor="#000"
                            android:textSize="12dp" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:background="#99A1AC" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="30dp">


                    <!--  <ImageView
                          android:layout_width="15dp"
                          android:layout_height="15dp"
                          android:layout_marginLeft="50dp"
                          android:background="@drawable/ic_appointment_book"
                          android:layout_gravity="center"
                          />-->


                    <ImageView
                        android:background="@drawable/ic_date_range_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:letterSpacing="0.025"
                            android:text="Academic Year"
                            android:textColor="#000"
                            android:textSize="14dp"

                            />
                        <TextView
                            android:id="@+id/tv_profile_p_academic_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="5dp"
                            android:letterSpacing="0.025"
                            android:textColor="#000"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="#99A1AC" />

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>



</RelativeLayout>